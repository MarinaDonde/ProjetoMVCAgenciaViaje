@model IEnumerable<AgenciaViaje.Models.Destino>

@{
    ViewData["Title"] = "Index";
}
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" asp-action="Destinos" asp-controller="Home">Destinos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" asp-action="Promocoes" asp-controller="Home">Promoções</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" asp-action="Create" asp-controller="Contatos">Contato</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" asp-action="Adm" asp-controller="Home">Administração</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

<h1>Destinos Cadastrados:</h1>


   
<div class="d-grid gap-2">          
    <a asp-action="Create"><button class="btn btn-primary" type="button">Novo Cadastro</button></a>
        
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dias)
            </td>
            <td>
                R$@Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDestino"><button class="btn btn-primary" type="button">Editar</button></a> 
                <a asp-action="Details" asp-route-id="@item.IdDestino"><button class="btn btn-primary" type="button">Detalhes</button></a> 
                <a asp-action="Delete" asp-route-id="@item.IdDestino"><button class="btn btn-danger" type="button">Excluir</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
  <footer>
    <p class="rodape bg-primary">Contato: 0800 0000</p>
    <p class="rodape bg-primary">2022 Agência Viaje! - Todos os direitos reservados. </p>
  </footer> 

</body>
